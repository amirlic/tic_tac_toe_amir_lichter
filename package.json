{
  "name": "realtime-tic-tac-toe",
  "version": "1.0.0",
  "description": "Real-time multiplayer Tic-Tac-Toe game over two synchronized WebSocket servers",
  "main": "src/server.js",
  "scripts": {
    "start:server1": "node src/enhancedServer.js 3001",
    "start:server2": "node src/enhancedServer.js 3002",
    "start:client": "node src/client.js",
    "dev:server1": "nodemon src/enhancedServer.js 3001",
    "dev:server2": "nodemon src/enhancedServer.js 3002",
    "test": "node test-game.js",
    "test:logic": "node test-game.js",
    "docker:build": "docker build -t tic-tac-toe .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "powershell -ExecutionPolicy Bypass -File setup.ps1 -Action setup",
    "setup:full": "powershell -ExecutionPolicy Bypass -File setup.ps1 -Action setup-full",
    "demo": "node quick-demo.js"
  },
  "keywords": ["websocket", "tic-tac-toe", "real-time", "multiplayer", "redis"],
  "author": "Amir Lichter",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2",
    "redis": "^4.6.10",
    "readline": "^1.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
