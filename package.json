{
  "name": "realtime-tic-tac-toe",
  "version": "1.0.0",
  "description": "Real-time multiplayer Tic-Tac-Toe game over two synchronized WebSocket servers",
  "main": "src/server.js",
  "scripts": {
    "start:server1": "node src/server.js 3001",
    "start:server2": "node src/server.js 3002",
    "start:client": "node src/client.js",
    "dev:server1": "nodemon src/server.js 3001",
    "dev:server2": "nodemon src/server.js 3002",
    "test": "node test-game.js",
    "test:logic": "node test-game.js",
    "dev:setup": "powershell -ExecutionPolicy Bypass -File Start-Game.ps1 dev",
    "game:setup": "powershell -ExecutionPolicy Bypass -File Start-Game.ps1",
    "start:all": "concurrently \"npm run start:server1\" \"npm run start:server2\"",
    "demo": "node dev-utils.js load-test"
  },
  "keywords": ["websocket", "tic-tac-toe", "real-time", "multiplayer", "redis"],
  "author": "Amir Lichter",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2",
    "redis": "^4.6.10",
    "readline": "^1.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
