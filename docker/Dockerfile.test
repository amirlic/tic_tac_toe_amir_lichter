# Test Dockerfile for running automated tests
# AI-Generated: 95% - Testing environment with Node.js

FROM node:18-alpine

WORKDIR /usr/src/app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code and tests
COPY src/ ./src/
COPY test-game.js ./
COPY quick-demo.js ./

# Install testing utilities
RUN npm install --no-save mocha chai

# Default command
CMD ["npm", "test"]
